{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Output as CommonJS but allow ESM-style imports in TS
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "utils"],
  "exclude": ["node_modules"]
}
